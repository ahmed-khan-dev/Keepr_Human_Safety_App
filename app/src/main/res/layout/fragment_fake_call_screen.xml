<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- CALLING Text -->
    <TextView
        android:id="@+id/tv_calling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALLING..."
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="50dp" />

    <!-- Caller Image -->
    <ImageView
        android:id="@+id/caller_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/user_img"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:background="@drawable/circle_bg"
        android:padding="4dp" />

    <!-- Bottom Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="24dp">

        <!-- Play Audio Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/getaudio"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            app:backgroundTint="@color/gradblue"
            app:icon="@drawable/microphn"
            app:iconSize="36dp"
            app:iconTint="@color/white"
            android:contentDescription="Audio" />

        <!-- End Call Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/end"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cornerRadius="36dp"
            app:backgroundTint="@color/red"
            app:icon="@drawable/phone"
            app:iconSize="36dp"
            app:iconTint="@color/white"
            android:contentDescription="End Call" />

        <!-- Video Call Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Videobtn"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            app:backgroundTint="@color/gradblue"
            app:icon="@drawable/videocall"
            app:iconSize="36dp"
            app:iconTint="@color/white"
            android:contentDescription="Video Call" />
    </LinearLayout>

</FrameLayout>
